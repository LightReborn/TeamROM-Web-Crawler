@using WebCrawler.Model.Models;
@model List<Game>
@{
    ViewBag.Title = "Game Page";
}

<div class="container body-content">    
    <h1 class="text-center">@Model[0].Name</h1>
    
    <div class="form-inline">
        @Html.LabelFor(x=>x[0].Name):
        @Html.DisplayFor(x => x[0].Name)
    </div>
    <div class="form-inline">
        @Html.LabelFor(x=>x[0].ReviewRating): 
        @Html.DisplayFor(x=>x[0].ReviewRating) / 10
    </div>
    <div class="form-inline">
        @Html.LabelFor(x => x[0].Price):
        $@Html.DisplayFor(x => x[0].Price)
    </div>
    <div class="form-inline">
        @Html.LabelFor(x => x[0].Platform):
        @Html.DisplayFor(x => x[0].Platform)
    </div>

    <div class="container table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var game in Model)
                {
                    <tr>
                        <td><a class="link" href="@game.ProductUrl" target="_blank">@game.Vendor</a></td>
                        <td>$@game.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
